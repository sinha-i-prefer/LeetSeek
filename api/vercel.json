{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python",
      "memory": 1024, // Example: increase memory if needed
      "maxDuration": 10, // Example: increase timeout if needed (in seconds)
      "regions": ["iad1"] // Change this to another region like "fra1", "sfo1", "hnd1"
    }
  },
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
